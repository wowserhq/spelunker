* {
  box-sizing: border-box
}

body, html {
  padding: 0
  margin: 0
}

html {
  font-size: 15px
}

body {
  padding-top: 70px
  color: #C6C6C6
  background: #2F2F2F
  font-family: 'Source Sans Pro', sans-serif
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
}

.spelunker {
  max-width: 80%
  margin: 0 auto
}

.header {
  position: fixed
  top: 0
  left: 0
  z-index: 100
  width: 100%
  height: 50px
  background: #202020
  border-bottom: 1px solid #000000

  nav {
    display: flex
    height: 100%
    flex-direction: row
    align-items: center

    ul {
      display: flex
      height: 100%
      flex-direction: row
      flex-grow: 1
      align-items: center
      justify-content: center
      list-style: none
      padding: 0
      margin: 0

      li {
        display: block

        a {
          display: block
          height: 100%
          padding: 16px 6px
        }
      }
    }
  }
}

.footer {
  margin: 20px 10px
  font-size: .9rem
  color: darken(#FFFFFF, 60%)

  p {
    line-height: 1.25
  }
}
